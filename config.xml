<?xml version='1.0' encoding='utf-8'?>

<widget id="org.guy.lodocs" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>LoDocs</name>
    <description>search for your lost items</description>

    <author email="huy@guy.com" href="http://www.lodocs.ml">Lo Docs</author>
    <content src="index.html" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14"/>

    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>

    <!-- use latest version of phonegap...this version is displayed in the phonegap web -->
    <!-- <preference name="phonegap-version" value="cli-6.5.0" /> -->

    <allow-navigation href="*" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />

    <icon src="data/logo.png" gap:role="default" />

    <plugin name="cordova-plugin-whitelist" />
</widget>

